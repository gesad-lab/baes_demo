# Environment variable template for BAE Academic System
# Copy to `.env` and adjust.
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Server Configuration - Centralized Port Management
API_HOST=0.0.0.0
API_PORT=8100
UI_HOST=0.0.0.0
UI_PORT=8600
DATABASE_URL=sqlite:///database/baes_system.db

# Realworld Testing Ports (optional - defaults to API_PORT/UI_PORT if not set)
REALWORLD_FASTAPI_PORT=8100
REALWORLD_STREAMLIT_PORT=8600

# Managed System Configuration
# Path where the standalone managed system will be created
# Can be absolute or relative to BAE project root
MANAGED_SYSTEM_PATH=managed_system

# BAE System Configuration
# Maximum number of retry attempts when TechLeadSWEA rejects a task
# Default: 3 (allows up to 3 retry attempts per failed task)
BAE_MAX_RETRIES=3

# BAE Strict Mode Configuration
# Controls behavior after max retries when code fails quality validation
# - false (default): FORCE-ACCEPT mode - accept code as-is and continue (research/evaluation)
# - true: STRICT mode - interrupt generation and return error (strict quality gates)
# Force-accept mode is useful for research/evaluation scenarios where capturing
# actual framework output (even with quality issues) is valuable for analysis.
BAE_STRICT_MODE=false

# Debug Configuration
# Set to 1, true, on, or yes to enable debug mode
# Debug mode shows verbose HTTP request logs from OpenAI API calls
# Default: 0 (disabled) - only shows warnings and errors
BAE_DEBUG=0
