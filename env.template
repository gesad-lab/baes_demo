# Environment variable template for BAE Academic System
# Copy to `.env` and adjust.
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Server Configuration - Centralized Port Management
API_HOST=0.0.0.0
API_PORT=8100
UI_HOST=0.0.0.0
UI_PORT=8600
DATABASE_URL=sqlite:///database/academic.db

# Realworld Testing Ports (optional - defaults to API_PORT/UI_PORT if not set)
REALWORLD_FASTAPI_PORT=8100
REALWORLD_STREAMLIT_PORT=8600

# Managed System Configuration
# Path where the standalone managed system will be created
# Can be absolute or relative to BAE project root
MANAGED_SYSTEM_PATH=managed_system
